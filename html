  <!-- Erstelle eine JavaScript-Funktion, die etwas macht, wenn der Link geklickt wird -->
  <script>
    function plus_action() {
      // Hier kommt der Code, der etwas macht, wenn der Link geklickt wird
      alert("Plus geklickt");
    }
